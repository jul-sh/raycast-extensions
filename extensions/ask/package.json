{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "ask",
  "title": "Ask",
  "description": "Intuitive and powerful interface for any AI API.",
  "keywords": [
    "OpenRouter",
    "ChatGPT",
    "Claude",
    "AI",
    "LLM",
    "OpenAI",
    "GPT"
  ],
  "icon": "icon.png",
  "author": "julsh",
  "contributors": [
    "abielzulio",
    "erodactyl",
    "pernielsentikaer",
    "shichongrui",
    "timolins",
    "cruelmoney",
    "sykuang",
    "thanhlongb",
    "k8scat",
    "Nauxscript",
    "Lemon"
  ],
  "pastContributors": [
    "pomdtr"
  ],
  "categories": [
    "Productivity",
    "Developer Tools",
    "Web",
    "Fun",
    "Finance",
    "Other"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "prompt",
      "title": "Ask",
      "subtitle": "Ask",
      "description": "Have AI answer your request",
      "mode": "view"
    },
    {
      "name": "conversation",
      "title": "Conversations",
      "subtitle": "Ask",
      "description": "Collection of your recent conversation",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "apiKey",
      "label": "API Key",
      "description": "Enter your personal API Key",
      "type": "password",
      "title": "API Key",
      "required": true
    },
    {
      "name": "isAutoSaveConversation",
      "label": "Enable auto-save conversation",
      "description": "Auto-save every conversation that you had",
      "type": "checkbox",
      "title": "Auto-save Conversation",
      "default": true,
      "required": false
    },
    {
      "name": "isAutoLoadText",
      "label": "Enable auto-load selected text",
      "description": "Load selected text from your frontmost application to the question bar automatically",
      "type": "checkbox",
      "title": "Auto-load Text",
      "default": false,
      "required": false
    },
    {
      "name": "isAutoFullInput",
      "label": "Enable full text input initially",
      "description": "Use full text input form when asking question for the first time",
      "type": "checkbox",
      "title": "Use Full Text Input",
      "default": false,
      "required": false
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.48.8",
    "@raycast/utils": "^1.5.2",
    "@types/uuid": "^9.0.0",
    "csv-parse": "^5.5.3",
    "match-sorter": "^6.3.4",
    "openai": "^4.24.3",
    "say": "^0.16.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.5",
    "@types/node": "18.8.3",
    "@types/react": "18.2.27",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
